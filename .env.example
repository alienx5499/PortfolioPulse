# PortfolioPulse Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# FINNHUB API Configuration
# Get your API key from: https://finnhub.io/
NEXT_PUBLIC_FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# MongoDB Database Configuration
# For local development, use: mongodb://localhost:27017/portfolio-pulse
# For production, use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/portfolio-pulse
MONGODB_URI=mongodb://localhost:27017/portfolio-pulse

# Better Auth Configuration
# Generate a secure secret key for authentication
BETTER_AUTH_SECRET=your_super_secret_auth_key_here_make_it_long_and_secure
BETTER_AUTH_URL=http://localhost:3000

# Gemini AI Configuration
# Get your API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Nodemailer Configuration
# Use Gmail with App Password for development
NODEMAILER_EMAIL=your_email@gmail.com
NODEMAILER_PASSWORD=your_app_specific_password

# Inngest Configuration
# Get your keys from: https://app.inngest.com/
INNGEST_EVENT_KEY=your_inngest_event_key_here
INNGEST_SIGNING_KEY=your_inngest_signing_key_here
